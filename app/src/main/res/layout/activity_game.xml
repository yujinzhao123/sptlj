<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#000"
                android:layout_height="match_parent">


    <RelativeLayout
            android:background="#666"
            android:layout_centerInParent="true"
            android:layout_width="310dp" android:layout_height="190dp">


        <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/weizhi1"
                android:gravity="center"
                android:hint="No.1\n点击入座"
                android:layout_margin="10dp"
                android:background="#fff"
                android:layout_width="90dp" android:layout_height="80dp"/>
        <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/weizhi2"
                android:layout_toRightOf="@+id/weizhi1"
                android:gravity="center"
                android:hint="No.2\n点击入座"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:layout_width="90dp" android:layout_height="80dp"/>

        <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/weizhi3"
                android:layout_below="@+id/weizhi1"
                android:gravity="center"
                android:hint="No.3\n点击入座"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:layout_width="90dp" android:layout_height="80dp"/>

        <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/weizhi4"
                android:layout_alignTop="@+id/weizhi3"
                android:layout_toRightOf="@+id/weizhi3"
                android:gravity="center"
                android:hint="No.4\n点击入座"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:layout_width="90dp" android:layout_height="80dp"/>

        <TextView
                android:textColor="@color/colorAccent"
                android:layout_marginRight="10dp"
                android:id="@+id/weizhi0"
                android:gravity="center"
                android:hint="No.观众\n点击入座"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#fff"
                android:layout_width="90dp" android:layout_height="80dp"/>

    </RelativeLayout>

    <Button
            android:visibility="gone"
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始"
    />

</RelativeLayout>